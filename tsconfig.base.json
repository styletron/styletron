{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "jsx": "react",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "styletron-engine-atomic": [
        "./packages/styletron-engine-atomic/src"
      ],
      "styletron-engine-monolithic": [
        "./packages/styletron-engine-monolithic/src"
      ],
      "styletron-engine-snapshot": [
        "./packages/styletron-engine-snapshot/src"
      ],
      "styletron-react": [
        "./packages/styletron-react/src"
      ],
      "styletron-standard": [
        "./packages/styletron-standard/src"
      ],
    }
  }
}
